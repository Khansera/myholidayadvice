<!doctype html>
<html lang=en>
<head>
<meta charset=UTF-8>
<meta name=viewport content="width=device-width,initial-scale=1">
<%- include('partials/meta') %>
<title>Gallery: Escorted Holidays</title>
<link rel="shortcut icon" href=/images/Picture1.jpg type=image/x-icon>
<%- include('partials/headlinks') %>
<style>img{width:100%;height:400px;object-fit:cover!important;cursor:pointer}.modal{display:none;position:fixed;z-index:1;left:0;top:0;width:100%;height:100%;overflow:auto;z-index:3000;justify-content:center;align-items:center;background-color:#000}.modal-content{position:relative;display:flex;flex-direction:column;justify-content:center;padding:0;width:80%;max-width:1200px}.slide{display:none}.image-slide{height:auto;width:100%}.modal-preview{width:100%}.dots{display:flex;flex-direction:row;justify-content:space-between}img.modal-preview,img.preview{opacity:.6}.modal-preview:hover,.preview:hover,img.active{opacity:1}img.hover-shadow{transition:.3s}.hover-shadow:hover{box-shadow:0 4px 8px 0 rgba(0,0,0,.2),0 6px 20px 0 rgba(0,0,0,.19)}.close{color:#fff;position:absolute;top:10px;right:25px;font-size:35px;font-weight:700}.close:focus,.close:hover{color:#999;text-decoration:none;cursor:pointer}.next,.previous{cursor:pointer;position:absolute;top:50%;width:auto;padding:16px;margin-top:-50px;color:#fff;font-weight:700;font-size:20px;transition:.6s ease;border-radius:0 3px 3px 0;user-select:none;-webkit-user-select:none}.next{right:0;border-radius:3px 0 0 3px}.next:hover,.previous:hover{background-color:rgba(0,0,0,.8)}</style>
</head>
<body>
<%- include('partials/navbar') %>
<div class="container-lg container-fluid my-5">
<h1 class="section-heading display-3 text-center">Gallery</h1>
<div class="row mt-5">
<%images.forEach((url,index)=>{%>
<%const toNumber=Number(index +1)%>
<div class="col-12 col-md-4">
<img src="<%=url.ImageUrl%>" onclick='openLightbox(),toSlide("<%=toNumber%>")' class="hover-shadow preview mt-2" alt="Toy car on the road.">
<h2 class="text-center my-4"><%=url.ImageHeading%></h2>
</div>
<%})%>
</div>
<div id=Lightbox class=modal>
<span class="close pointer" onclick=closeLightbox()>&times;</span>
<div class=modal-content>
<%images.forEach((url,index)=>{%>
<div class=slide>
<img src="<%=url.ImageUrl%>" class=image-slide alt="Toy car on the road.">
</div>
<%})%>
<a class=previous onclick=changeSlide(-1)>&#10094;</a>
<a class=next onclick=changeSlide(1)>&#10095;</a>
</div>
<%- include('partials/footlinks') %>
<script async src=/dist/gallery.js></script>
</div></div></body>
</html>